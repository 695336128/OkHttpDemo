<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_broke_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhang.okhttpdemo.activity.BrokePointActivity">

    <Button
        android:id="@+id/start_1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start1" />

    <TextView
        android:id="@+id/progress_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <Button
        android:id="@+id/pause_1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pause1" />

    <Button
        android:id="@+id/start_2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start2" />

    <TextView
        android:id="@+id/progress_2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <Button
        android:id="@+id/pause_2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pause2" />


</LinearLayout>
